<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <display-name>BookSwap</display-name>
    
    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Character encoding filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.example.demo.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Authorization filter -->
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.example.demo.filter.AuthorizationFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Servlet mappings -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.RegisterServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BookListServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.BookListServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BookListServlet</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BookDetailServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.BookDetailServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BookDetailServlet</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.AddBookServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.SearchServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BookApiServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.BookApiServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BookApiServlet</servlet-name>
        <url-pattern>/api/books</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>WalletServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.WalletServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>WalletServlet</servlet-name>
        <url-pattern>/wallet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BuyBookServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.BuyBookServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BuyBookServlet</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CancelBookServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.CancelBookServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CancelBookServlet</servlet-name>
        <url-pattern>/cancelBook</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MessageServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.MessageServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MessageServlet</servlet-name>
        <url-pattern>/messages</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OrderListServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.OrderListServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>OrderListServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ConfirmDeliveryServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.ConfirmDeliveryServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ConfirmDeliveryServlet</servlet-name>
        <url-pattern>/confirm-delivery</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MessageListServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.MessageListServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MessageListServlet</servlet-name>
        <url-pattern>/message-list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.UserProfileServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminRemoveBookServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.AdminRemoveBookServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AdminRemoveBookServlet</servlet-name>
        <url-pattern>/admin/removeBook</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PayOrderServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.PayOrderServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PayOrderServlet</servlet-name>
        <url-pattern>/pay-order</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ShipOrderServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.ShipOrderServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ShipOrderServlet</servlet-name>
        <url-pattern>/ship-order</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SellerOrderServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.SellerOrderServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SellerOrderServlet</servlet-name>
        <url-pattern>/seller-orders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AppealServlet</servlet-name>
        <servlet-class>com.example.demo.servlet.AppealServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AppealServlet</servlet-name>
        <url-pattern>/appeal</url-pattern>
    </servlet-mapping>
    
    <!-- Database resource reference -->
    <resource-ref>
        <description>MySQL DataSource</description>
        <res-ref-name>jdbc/BookSwapDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
